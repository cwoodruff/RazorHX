@page
@model FormattingModel
@{
    Layout = "_ComponentPage";
    ViewData["Title"] = "Format Bytes";
    ViewData["ComponentName"] = "Format Bytes";
    ViewData["ComponentTag"] = "rhx-format-bytes";
    ViewData["ComponentDescription"] = "Human-readable byte formatting with binary/decimal units. Also covers Format Number, Format Date, and Relative Time.";
    var sampleDate = new DateTimeOffset(2025, 3, 15, 10, 30, 45, TimeSpan.Zero);
}

<!-- ═══════════════════════════════════════════════
     Format Bytes
     ═══════════════════════════════════════════════ -->

<div class="demo-section">
    <h2>Format Bytes — Short</h2>

    <div class="demo-label">Binary (1024-based) byte formatting</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-bytes rhx-value="0" />
        <rhx-format-bytes rhx-value="512" />
        <rhx-format-bytes rhx-value="1024" />
        <rhx-format-bytes rhx-value="1572864" />
        <rhx-format-bytes rhx-value="1073741824" />
        <rhx-format-bytes rhx-value="1099511627776" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Bytes — Long</h2>

    <div class="demo-label">Full unit names with singular/plural</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-bytes rhx-value="1" rhx-display="long" />
        <rhx-format-bytes rhx-value="0" rhx-display="long" />
        <rhx-format-bytes rhx-value="1572864" rhx-display="long" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Bytes — Narrow</h2>

    <div class="demo-label">Compact format with no space</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-bytes rhx-value="1024" rhx-display="narrow" />
        <rhx-format-bytes rhx-value="1572864" rhx-display="narrow" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Bytes — Bits</h2>

    <div class="demo-label">Decimal (1000-based) bit formatting</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-bytes rhx-value="500" rhx-unit="bit" />
        <rhx-format-bytes rhx-value="1000" rhx-unit="bit" />
        <rhx-format-bytes rhx-value="1000000" rhx-unit="bit" />
    </div>
</div>

<!-- ═══════════════════════════════════════════════
     Format Number
     ═══════════════════════════════════════════════ -->

<div class="demo-section">
    <h2>Format Number — Decimal</h2>

    <div class="demo-label">Default grouping and fraction digits</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-number rhx-value="1234.56" />
        <rhx-format-number rhx-value="1234.56" rhx-no-grouping="true" />
        <rhx-format-number rhx-value="1.5" rhx-minimum-fraction-digits="0" rhx-maximum-fraction-digits="3" />
        <rhx-format-number rhx-value="1.0" rhx-minimum-fraction-digits="2" rhx-maximum-fraction-digits="2" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Number — Currency</h2>

    <div class="demo-label">Symbol, code, and name displays</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-number rhx-value="1234.56" rhx-type="currency" rhx-currency="USD" />
        <rhx-format-number rhx-value="1234.56" rhx-type="currency" rhx-currency="USD" rhx-currency-display="code" />
        <rhx-format-number rhx-value="1234.56" rhx-type="currency" rhx-currency="USD" rhx-currency-display="name" />
        <rhx-format-number rhx-value="1234" rhx-type="currency" rhx-currency="JPY" />
        <rhx-format-number rhx-value="1234.56" rhx-type="currency" rhx-currency="EUR" />
        <rhx-format-number rhx-value="1234.56" rhx-type="currency" rhx-currency="GBP" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Number — Percent</h2>

    <div class="demo-label">Percentage formatting</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-number rhx-value="0.75" rhx-type="percent" />
        <rhx-format-number rhx-value="0.756" rhx-type="percent" rhx-maximum-fraction-digits="1" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Number — Culture</h2>

    <div class="demo-label">German locale (de-DE) with comma as decimal separator</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-number rhx-value="1234.56" rhx-lang="de-DE" />
    </div>
</div>

<!-- ═══════════════════════════════════════════════
     Format Date
     ═══════════════════════════════════════════════ -->

<div class="demo-section">
    <h2>Format Date — Custom Format</h2>

    <div class="demo-label">Using .NET format strings</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-date rhx-date="@sampleDate" rhx-format="yyyy-MM-dd" />
        <rhx-format-date rhx-date="@sampleDate" rhx-format="HH:mm:ss" />
        <rhx-format-date rhx-date="@sampleDate" rhx-format="MMMM d, yyyy h:mm tt" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Date — Individual Parts</h2>

    <div class="demo-label">Build date format from individual part specifiers</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-date rhx-date="@sampleDate" rhx-month="long" rhx-day="numeric" rhx-year="numeric" />
        <rhx-format-date rhx-date="@sampleDate" rhx-month="short" rhx-day="numeric" />
        <rhx-format-date rhx-date="@sampleDate" rhx-month="numeric" rhx-day="numeric" rhx-year="numeric" />
        <rhx-format-date rhx-date="@sampleDate" rhx-weekday="long" rhx-month="long" rhx-day="numeric" />
        <rhx-format-date rhx-date="@sampleDate" rhx-year="2-digit" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Date — Time</h2>

    <div class="demo-label">Time parts with 12h and 24h formats</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-date rhx-date="@sampleDate" rhx-hour="2-digit" rhx-minute="2-digit" rhx-hour-format="24" />
        <rhx-format-date rhx-date="@sampleDate" rhx-hour="numeric" rhx-minute="2-digit" rhx-second="2-digit" rhx-hour-format="12" />
        <rhx-format-date rhx-date="@sampleDate" rhx-month="long" rhx-day="numeric" rhx-year="numeric" rhx-hour="numeric" rhx-minute="2-digit" rhx-hour-format="12" />
    </div>
</div>

<div class="demo-section">
    <h2>Format Date — Timezone</h2>

    <div class="demo-label">Convert to a specific timezone</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-format-date rhx-date="@sampleDate" rhx-timezone="America/New_York" rhx-hour="numeric" rhx-minute="2-digit" rhx-hour-format="24" />
        <rhx-format-date rhx-date="@sampleDate" rhx-timezone="Asia/Tokyo" rhx-hour="numeric" rhx-minute="2-digit" rhx-hour-format="24" />
    </div>
</div>

<!-- ═══════════════════════════════════════════════
     Relative Time
     ═══════════════════════════════════════════════ -->

<div class="demo-section">
    <h2>Relative Time — Long</h2>

    <div class="demo-label">Server-rendered relative time with auto-updating JS</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddSeconds(-3)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddMinutes(-5)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddHours(-3)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-1)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-14)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-60)" />
    </div>
</div>

<div class="demo-section">
    <h2>Relative Time — Future</h2>

    <div class="demo-label">Future dates</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddSeconds(3)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddMinutes(10)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddHours(2)" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(3)" />
    </div>
</div>

<div class="demo-section">
    <h2>Relative Time — Short</h2>

    <div class="demo-label">Compact relative format</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddMinutes(-5)" rhx-format="short" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddHours(2)" rhx-format="short" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-3)" rhx-format="short" />
    </div>
</div>

<div class="demo-section">
    <h2>Relative Time — Narrow</h2>

    <div class="demo-label">Minimal format, no direction</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddMinutes(-5)" rhx-format="narrow" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddHours(2)" rhx-format="narrow" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-45)" rhx-format="narrow" />
    </div>
</div>

<div class="demo-section">
    <h2>Relative Time — Auto Numeric</h2>

    <div class="demo-label">"yesterday", "tomorrow", "last week" when value is 1</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start; gap: var(--rhx-space-sm);">
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-1)" rhx-numeric="auto" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(1)" rhx-numeric="auto" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-7)" rhx-numeric="auto" />
        <rhx-relative-time rhx-date="@DateTimeOffset.UtcNow.AddDays(-365)" rhx-numeric="auto" />
    </div>
</div>

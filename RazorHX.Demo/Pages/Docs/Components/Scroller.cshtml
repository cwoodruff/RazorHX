@page
@model ScrollerModel
@{
    Layout = "_ComponentPage";
    ViewData["Title"] = "Scroller";
    ViewData["ComponentName"] = "Scroller";
    ViewData["ComponentTag"] = "rhx-scroller";
    ViewData["ComponentDescription"] = "Scrollable container with overflow shadows for horizontal, vertical, or both directions.";
}

<section class="docs-component-section">
    <h2>Examples</h2>

    <div class="docs-example">
        <h3>Horizontal</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="horizontal-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="horizontal-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="horizontal-preview" rhx-active="true">
                <div class="docs-preview docs-preview--vertical">
                    <rhx-scroller rhx-orientation="horizontal">
                        <div style="display: flex; gap: var(--rhx-space-md); padding: var(--rhx-space-md); white-space: nowrap;">
                            @for (int i = 1; i <= 20; i++)
                            {
                                <div style="flex: 0 0 auto; width: 160px; height: 100px; display: flex; align-items: center; justify-content: center; background: var(--rhx-color-neutral-100); border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md); font-weight: var(--rhx-font-weight-medium);">
                                    Item @i
                                </div>
                            }
                        </div>
                    </rhx-scroller>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="horizontal-code">
                <div class="docs-code">
                    <pre><code>@Model.HorizontalCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <div class="docs-example">
        <h3>Vertical</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="vertical-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="vertical-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="vertical-preview" rhx-active="true">
                <div class="docs-preview docs-preview--vertical">
                    <rhx-scroller rhx-orientation="vertical" style="height: 200px;">
                        <div style="padding: var(--rhx-space-md);">
                            @for (int i = 1; i <= 30; i++)
                            {
                                <div style="padding: var(--rhx-space-sm) var(--rhx-space-md); margin-bottom: var(--rhx-space-xs); background: var(--rhx-color-neutral-100); border-radius: var(--rhx-radius-sm);">
                                    List item @i
                                </div>
                            }
                        </div>
                    </rhx-scroller>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="vertical-code">
                <div class="docs-code">
                    <pre><code>@Model.VerticalCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <div class="docs-example">
        <h3>Both Directions</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="both-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="both-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="both-preview" rhx-active="true">
                <div class="docs-preview docs-preview--vertical">
                    <rhx-scroller rhx-orientation="both" style="height: 250px;">
                        <div style="display: grid; grid-template-columns: repeat(10, 160px); gap: var(--rhx-space-sm); padding: var(--rhx-space-md);">
                            @for (int row = 1; row <= 10; row++)
                            {
                                @for (int col = 1; col <= 10; col++)
                                {
                                    <div style="height: 60px; display: flex; align-items: center; justify-content: center; background: var(--rhx-color-neutral-100); border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-sm); font-size: var(--rhx-font-size-sm);">
                                        @row,@col
                                    </div>
                                }
                            }
                        </div>
                    </rhx-scroller>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="both-code">
                <div class="docs-code">
                    <pre><code>@Model.BothCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <div class="docs-example">
        <h3>Card Gallery</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="gallery-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="gallery-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="gallery-preview" rhx-active="true">
                <div class="docs-preview docs-preview--vertical">
                    <rhx-scroller rhx-orientation="horizontal">
                        <div style="display: flex; gap: var(--rhx-space-lg); padding: var(--rhx-space-md);">
                            @for (int i = 1; i <= 8; i++)
                            {
                                <rhx-card style="flex: 0 0 280px;">
                                    <rhx-card-header><h3 style="margin:0;">Card @i</h3></rhx-card-header>
                                    <p>A scrollable card gallery. Each card has a fixed width so the row extends beyond the viewport.</p>
                                    <rhx-card-footer>
                                        <rhx-button rhx-variant="ghost" rhx-size="small">View</rhx-button>
                                    </rhx-card-footer>
                                </rhx-card>
                            }
                        </div>
                    </rhx-scroller>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="gallery-code">
                <div class="docs-code">
                    <pre><code>@Model.CardGalleryCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <div class="docs-example">
        <h3>No Overflow</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="nooverflow-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="nooverflow-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="nooverflow-preview" rhx-active="true">
                <div class="docs-preview docs-preview--vertical">
                    <p class="demo-label">No shadows appear when content fits within the container</p>
                    <rhx-scroller rhx-orientation="horizontal">
                        <div style="display: flex; gap: var(--rhx-space-md); padding: var(--rhx-space-md);">
                            <div style="flex: 0 0 auto; width: 120px; height: 60px; display: flex; align-items: center; justify-content: center; background: var(--rhx-color-neutral-100); border-radius: var(--rhx-radius-md);">
                                A
                            </div>
                            <div style="flex: 0 0 auto; width: 120px; height: 60px; display: flex; align-items: center; justify-content: center; background: var(--rhx-color-neutral-100); border-radius: var(--rhx-radius-md);">
                                B
                            </div>
                            <div style="flex: 0 0 auto; width: 120px; height: 60px; display: flex; align-items: center; justify-content: center; background: var(--rhx-color-neutral-100); border-radius: var(--rhx-radius-md);">
                                C
                            </div>
                        </div>
                    </rhx-scroller>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="nooverflow-code">
                <div class="docs-code">
                    <pre><code>@Model.NoOverflowCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>
</section>

@await Html.PartialAsync("_PropertyTable", Model.Properties)

<section class="docs-component-section">
    <h2>Accessibility</h2>
    <ul class="docs-a11y-list">
        <li>The scroller container uses native browser scrolling, so standard scroll behaviors and assistive technology support apply.</li>
        <li>Overflow shadows are purely visual indicators rendered via CSS gradients â€” they do not affect the accessibility tree.</li>
        <li>Ensure scrollable content is reachable via keyboard; focusable elements inside the scroller can be tabbed to naturally.</li>
        <li>Consider providing an <code>aria-label</code> on the scroller when the scrollable region contains a distinct content group.</li>
    </ul>
</section>

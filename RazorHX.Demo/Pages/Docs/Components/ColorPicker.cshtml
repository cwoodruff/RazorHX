@page
@model ColorPickerModel
@{
    Layout = "_ComponentPage";
    ViewData["Title"] = "Color Picker";
    ViewData["ComponentName"] = "Color Picker";
    ViewData["ComponentTag"] = "rhx-color-picker";
    ViewData["ComponentDescription"] = "Color selection with swatches, opacity, format options, and model binding.";
}

<section class="docs-component-section">
    <h2>Examples</h2>

    <!-- Basic -->
    <div class="docs-example">
        <h3>Basic</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="basic-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="basic-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="basic-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker name="color" rhx-label="Color" value="#3b82f6" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="basic-code">
                <div class="docs-code">
                    <pre><code>@Model.BasicCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- With Swatches -->
    <div class="docs-example">
        <h3>With Swatches</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="swatches-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="swatches-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="swatches-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker name="color-swatches" rhx-label="Brand Color"
                                      value="#ef4444"
                                      rhx-swatches="#ef4444,#f97316,#eab308,#22c55e,#3b82f6,#8b5cf6,#ec4899,#000000" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="swatches-code">
                <div class="docs-code">
                    <pre><code>@Model.SwatchesCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- With Opacity -->
    <div class="docs-example">
        <h3>With Opacity</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="opacity-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="opacity-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="opacity-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker name="color-alpha" rhx-label="Overlay Color" value="#3b82f6"
                                      rhx-opacity="true" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="opacity-code">
                <div class="docs-code">
                    <pre><code>@Model.OpacityCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Formats -->
    <div class="docs-example">
        <h3>Formats</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="formats-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="formats-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="formats-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker name="color-rgb" rhx-label="RGB Color" value="#22c55e"
                                      rhx-format="rgb" />
                    <rhx-color-picker name="color-hsl" rhx-label="HSL Color" value="#8b5cf6"
                                      rhx-format="hsl" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="formats-code">
                <div class="docs-code">
                    <pre><code>@Model.FormatsCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Inline -->
    <div class="docs-example">
        <h3>Inline</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="inline-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="inline-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="inline-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker name="color-inline" rhx-label="Theme Color" value="#f97316"
                                      rhx-inline="true"
                                      rhx-swatches="#ef4444,#f97316,#eab308,#22c55e,#3b82f6,#8b5cf6" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="inline-code">
                <div class="docs-code">
                    <pre><code>@Model.InlineCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- States -->
    <div class="docs-example">
        <h3>States</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="states-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="states-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="states-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker name="color-dis" rhx-label="Disabled" value="#6b7280"
                                      rhx-disabled="true" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="states-code">
                <div class="docs-code">
                    <pre><code>@Model.StatesCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Model Binding -->
    <div class="docs-example">
        <h3>Model Binding</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="binding-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="binding-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="binding-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-color-picker rhx-for="BrandColor" rhx-label="Brand Color" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="binding-code">
                <div class="docs-code">
                    <pre><code>@Model.ModelBindingCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>
</section>

<!-- Properties -->
@await Html.PartialAsync("_PropertyTable", Model.Properties)

<!-- Accessibility -->
<section class="docs-component-section">
    <h2>Accessibility</h2>
    <ul class="docs-a11y-list">
        <li>Trigger button has an <code>aria-label</code> describing the current color value.</li>
        <li>Keyboard navigation is supported within the swatch grid using arrow keys.</li>
        <li>The selected color value is announced to screen readers on change.</li>
        <li>Disabled state sets <code>aria-disabled="true"</code> on the trigger.</li>
    </ul>
</section>

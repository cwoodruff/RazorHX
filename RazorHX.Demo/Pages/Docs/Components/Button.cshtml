    <!-- Shapes -->
    <div class="docs-example">
        <h3>Shapes</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="shapes-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="shapes-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="shapes-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-button rhx-variant="brand">Default</rhx-button>
                    <rhx-button rhx-variant="brand" rhx-pill="true">Pill</rhx-button>
                    <rhx-button rhx-variant="brand" rhx-circle="true" aria-label="Add">+</rhx-button>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="shapes-code">

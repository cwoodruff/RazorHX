@page
@model SplitPanelModel
@{
    Layout = "_ComponentPage";
    ViewData["Title"] = "Split Panel";
    ViewData["ComponentName"] = "Split Panel";
    ViewData["ComponentTag"] = "rhx-split-panel";
    ViewData["ComponentDescription"] = "Resizable split container with snap points and vertical mode.";
}

<section class="docs-component-section">
    <h2>Examples</h2>

    <!-- Horizontal -->
    <div class="docs-example">
        <h3>Horizontal</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="horizontal-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="horizontal-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="horizontal-preview" rhx-active="true">
                <div class="docs-preview">
                    <div style="height: 300px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md); width: 100%;">
                        <rhx-split-panel rhx-position="30">
                            <rhx-split-start>
                                <div style="padding: var(--rhx-space-lg);">
                                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Sidebar</h4>
                                    <p>Navigation or filter panel. Drag the divider to resize.</p>
                                </div>
                            </rhx-split-start>
                            <rhx-split-end>
                                <div style="padding: var(--rhx-space-lg);">
                                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Main Content</h4>
                                    <p>Primary content area. The end panel takes the remaining space.</p>
                                </div>
                            </rhx-split-end>
                        </rhx-split-panel>
                    </div>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="horizontal-code">
                <div class="docs-code">
                    <pre><code>@Model.HorizontalCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Vertical -->
    <div class="docs-example">
        <h3>Vertical</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="vertical-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="vertical-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="vertical-preview" rhx-active="true">
                <div class="docs-preview">
                    <div style="height: 400px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md); width: 100%;">
                        <rhx-split-panel rhx-position="40" rhx-vertical>
                            <rhx-split-start>
                                <div style="padding: var(--rhx-space-lg);">
                                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Editor</h4>
                                    <p>Code or text editing area.</p>
                                </div>
                            </rhx-split-start>
                            <rhx-split-end>
                                <div style="padding: var(--rhx-space-lg);">
                                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Output</h4>
                                    <p>Console or preview area below the editor.</p>
                                </div>
                            </rhx-split-end>
                        </rhx-split-panel>
                    </div>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="vertical-code">
                <div class="docs-code">
                    <pre><code>@Model.VerticalCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Snap Points -->
    <div class="docs-example">
        <h3>Snap Points</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="snap-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="snap-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="snap-preview" rhx-active="true">
                <div class="docs-preview">
                    <div style="height: 250px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md); width: 100%;">
                        <rhx-split-panel rhx-position="50" rhx-snap="25,50,75">
                            <rhx-split-start>
                                <div style="padding: var(--rhx-space-lg);">
                                    <p>Drag and feel the snap points.</p>
                                </div>
                            </rhx-split-start>
                            <rhx-split-end>
                                <div style="padding: var(--rhx-space-lg);">
                                    <p>The divider snaps at 25%, 50%, and 75%.</p>
                                </div>
                            </rhx-split-end>
                        </rhx-split-panel>
                    </div>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="snap-code">
                <div class="docs-code">
                    <pre><code>@Model.SnapCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Disabled -->
    <div class="docs-example">
        <h3>Disabled</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="disabled-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="disabled-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="disabled-preview" rhx-active="true">
                <div class="docs-preview">
                    <div style="height: 200px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md); width: 100%;">
                        <rhx-split-panel rhx-position="60" rhx-disabled>
                            <rhx-split-start>
                                <div style="padding: var(--rhx-space-lg);">
                                    <p>Fixed start panel (60%).</p>
                                </div>
                            </rhx-split-start>
                            <rhx-split-end>
                                <div style="padding: var(--rhx-space-lg);">
                                    <p>Fixed end panel (40%).</p>
                                </div>
                            </rhx-split-end>
                        </rhx-split-panel>
                    </div>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="disabled-code">
                <div class="docs-code">
                    <pre><code>@Model.DisabledCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>
</section>

<!-- Properties -->
@await Html.PartialAsync("_PropertyTable", Model.Properties)

<!-- Accessibility -->
<section class="docs-component-section">
    <h2>Accessibility</h2>
    <ul class="docs-a11y-list">
        <li>The divider handle has <code>role="separator"</code> with <code>aria-valuenow</code> reflecting the current position.</li>
        <li>Keyboard arrow keys (Left/Right or Up/Down) adjust the divider position.</li>
        <li>When disabled, the divider is not focusable and does not respond to keyboard or pointer input.</li>
        <li>Vertical mode sets <code>aria-orientation="vertical"</code> on the separator.</li>
    </ul>
</section>

@page
@model IconModel
@{
    Layout = "_ComponentPage";
    ViewData["Title"] = "Icon";
    ViewData["ComponentName"] = "Icon";
    ViewData["ComponentTag"] = "rhx-icon";
    ViewData["ComponentDescription"] = "Inline SVG icon system with 40+ built-in icons and size variants.";
}

<section class="docs-component-section">
    <h2>Examples</h2>

    <!-- Gallery -->
    <div class="docs-example">
        <h3>Gallery</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="gallery-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="gallery-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="gallery-preview" rhx-active="true">
                <div class="docs-preview">
                    <div style="display: flex; flex-wrap: wrap; gap: var(--rhx-space-lg); align-items: center;">
                        @foreach (var name in RazorHX.Components.Imagery.IconRegistry.GetNames().OrderBy(n => n).Take(24))
                        {
                            <div style="display: flex; flex-direction: column; align-items: center; gap: var(--rhx-space-xs); width: 72px;">
                                <rhx-icon rhx-name="@name" />
                                <span style="font-size: var(--rhx-font-size-xs); color: var(--rhx-color-text-muted);">@name</span>
                            </div>
                        }
                    </div>
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="gallery-code">
                <div class="docs-code">
                    <pre><code>@Model.GalleryCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Sizes -->
    <div class="docs-example">
        <h3>Sizes</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="sizes-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="sizes-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="sizes-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-icon rhx-name="star" rhx-size="small" />
                    <rhx-icon rhx-name="star" />
                    <rhx-icon rhx-name="star" rhx-size="large" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="sizes-code">
                <div class="docs-code">
                    <pre><code>@Model.SizesCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>

    <!-- Accessible -->
    <div class="docs-example">
        <h3>Accessible</h3>
        <rhx-tab-group>
            <rhx-tab rhx-panel="accessible-preview" rhx-active="true">Preview</rhx-tab>
            <rhx-tab rhx-panel="accessible-code">Code</rhx-tab>
            <rhx-tab-panel rhx-name="accessible-preview" rhx-active="true">
                <div class="docs-preview">
                    <rhx-icon rhx-name="settings" rhx-label="Settings" />
                    <rhx-icon rhx-name="bell" rhx-label="Notifications" />
                    <rhx-icon rhx-name="user" rhx-label="User profile" />
                </div>
            </rhx-tab-panel>
            <rhx-tab-panel rhx-name="accessible-code">
                <div class="docs-code">
                    <pre><code>@Model.AccessibleCode</code></pre>
                </div>
            </rhx-tab-panel>
        </rhx-tab-group>
    </div>
</section>

<!-- Properties -->
@await Html.PartialAsync("_PropertyTable", Model.Properties)

<!-- Accessibility -->
<section class="docs-component-section">
    <h2>Accessibility</h2>
    <ul class="docs-a11y-list">
        <li>Decorative icons automatically set <code>aria-hidden="true"</code> so screen readers skip them.</li>
        <li>Meaningful icons with <code>rhx-label</code> receive <code>aria-label</code> and <code>role="img"</code> for screen reader announcement.</li>
        <li>Always provide <code>rhx-label</code> when the icon conveys information not available from surrounding text.</li>
    </ul>
</section>

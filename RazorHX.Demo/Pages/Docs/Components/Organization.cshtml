@page
@model OrganizationModel
@{
    Layout = "_ComponentPage";
    ViewData["Title"] = "Card";
    ViewData["ComponentName"] = "Card";
    ViewData["ComponentTag"] = "rhx-card";
    ViewData["ComponentDescription"] = "Content container with header, body, footer, and image slots. Also covers Divider and Split Panel.";
}

<div class="demo-section">
    <h2>Card — Basic</h2>

    <div class="demo-label">Card with header, body, and footer</div>
    <div class="demo-row">
        <div style="width: 320px;">
            <rhx-card>
                <rhx-card-header><h3 style="margin:0;">Product Name</h3></rhx-card-header>
                <p>A short description of the product. Great for showcasing items in a grid layout.</p>
                <rhx-card-footer>
                    <rhx-button rhx-variant="brand" rhx-size="small">Buy Now</rhx-button>
                    <rhx-button rhx-variant="ghost" rhx-size="small">Details</rhx-button>
                </rhx-card-footer>
            </rhx-card>
        </div>
    </div>
</div>

<div class="demo-section">
    <h2>Card — With Image</h2>

    <div class="demo-label">Image slot renders above the header</div>
    <div class="demo-row">
        <div style="width: 320px;">
            <rhx-card>
                <rhx-card-image rhx-src="https://picsum.photos/640/360" rhx-alt="Random photo" />
                <rhx-card-header><h3 style="margin:0;">Featured Article</h3></rhx-card-header>
                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vivamus lacinia odio vitae vestibulum.</p>
                <rhx-card-footer>
                    <rhx-button rhx-variant="ghost" rhx-size="small">Read More</rhx-button>
                </rhx-card-footer>
            </rhx-card>
        </div>
    </div>
</div>

<div class="demo-section">
    <h2>Card — Minimal</h2>

    <div class="demo-label">Body only, no header or footer</div>
    <div class="demo-row">
        <div style="width: 320px;">
            <rhx-card>
                <p>A simple card with just body content. No header, footer, or image required.</p>
            </rhx-card>
        </div>
    </div>
</div>

<div class="demo-section">
    <h2>Card Grid</h2>

    <div class="demo-label">Responsive card layout</div>
    <div style="display: grid; grid-template-columns: repeat(auto-fill, minmax(280px, 1fr)); gap: var(--rhx-space-lg);">
        @for (int i = 1; i <= 3; i++)
        {
            <rhx-card>
                <rhx-card-header><h3 style="margin:0;">Card @i</h3></rhx-card-header>
                <p>Card @i content goes here with some placeholder text.</p>
                <rhx-card-footer>
                    <rhx-button rhx-variant="ghost" rhx-size="small">Action</rhx-button>
                </rhx-card-footer>
            </rhx-card>
        }
    </div>
</div>

<div class="demo-section">
    <h2>Divider — Horizontal</h2>

    <div class="demo-label">Default horizontal rule</div>
    <div class="demo-row" style="flex-direction: column; align-items: stretch;">
        <p>Content above the divider.</p>
        <rhx-divider />
        <p>Content below the divider.</p>
    </div>
</div>

<div class="demo-section">
    <h2>Divider — Vertical</h2>

    <div class="demo-label">Vertical separator between inline elements</div>
    <div class="demo-row" style="align-items: stretch; height: 48px;">
        <span>Left</span>
        <rhx-divider rhx-vertical />
        <span>Right</span>
    </div>
</div>

<div class="demo-section">
    <h2>Split Panel — Horizontal</h2>

    <div class="demo-label">Drag the divider or use arrow keys to resize</div>
    <div style="height: 300px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md);">
        <rhx-split-panel rhx-position="30">
            <rhx-split-start>
                <div style="padding: var(--rhx-space-lg);">
                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Sidebar</h4>
                    <p>Navigation or filter panel. Drag the divider to resize.</p>
                </div>
            </rhx-split-start>
            <rhx-split-end>
                <div style="padding: var(--rhx-space-lg);">
                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Main Content</h4>
                    <p>Primary content area. The end panel takes the remaining space.</p>
                </div>
            </rhx-split-end>
        </rhx-split-panel>
    </div>
</div>

<div class="demo-section">
    <h2>Split Panel — Vertical</h2>

    <div class="demo-label">Top/bottom layout</div>
    <div style="height: 400px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md);">
        <rhx-split-panel rhx-position="40" rhx-vertical>
            <rhx-split-start>
                <div style="padding: var(--rhx-space-lg);">
                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Editor</h4>
                    <p>Code or text editing area.</p>
                </div>
            </rhx-split-start>
            <rhx-split-end>
                <div style="padding: var(--rhx-space-lg);">
                    <h4 style="margin:0 0 var(--rhx-space-sm) 0;">Output</h4>
                    <p>Console or preview area below the editor.</p>
                </div>
            </rhx-split-end>
        </rhx-split-panel>
    </div>
</div>

<div class="demo-section">
    <h2>Split Panel — Snap Points</h2>

    <div class="demo-label">Snaps to 25%, 50%, and 75%</div>
    <div style="height: 250px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md);">
        <rhx-split-panel rhx-position="50" rhx-snap="25,50,75">
            <rhx-split-start>
                <div style="padding: var(--rhx-space-lg);">
                    <p>Drag and feel the snap points.</p>
                </div>
            </rhx-split-start>
            <rhx-split-end>
                <div style="padding: var(--rhx-space-lg);">
                    <p>The divider snaps at 25%, 50%, and 75%.</p>
                </div>
            </rhx-split-end>
        </rhx-split-panel>
    </div>
</div>

<div class="demo-section">
    <h2>Split Panel — Disabled</h2>

    <div class="demo-label">Fixed layout, divider cannot be dragged</div>
    <div style="height: 200px; border: var(--rhx-border-width) solid var(--rhx-color-border); border-radius: var(--rhx-radius-md);">
        <rhx-split-panel rhx-position="60" rhx-disabled>
            <rhx-split-start>
                <div style="padding: var(--rhx-space-lg);">
                    <p>Fixed start panel (60%).</p>
                </div>
            </rhx-split-start>
            <rhx-split-end>
                <div style="padding: var(--rhx-space-lg);">
                    <p>Fixed end panel (40%).</p>
                </div>
            </rhx-split-end>
        </rhx-split-panel>
    </div>
</div>

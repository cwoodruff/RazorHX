@page
@model SelectsModel
@{
    ViewData["Title"] = "Selects";
}

<div class="demo-section">
    <h2>Select</h2>

    <!-- ── Basic select with items ── -->
    <div class="demo-label">Basic Select (Items Binding)</div>
    <div class="demo-row">
        <rhx-select rhx-label="Country" name="country"
                    rhx-placeholder="Choose a country"
                    rhx-items="Model.Countries" />
    </div>

    <!-- ── With pre-selected value ── -->
    <div class="demo-label">Pre-selected Value</div>
    <div class="demo-row">
        <rhx-select rhx-label="Country" name="country-pre" value="UK"
                    rhx-items="Model.Countries" />
    </div>

    <!-- ── Enum binding ── -->
    <div class="demo-label">Enum Binding</div>
    <div class="demo-row">
        <rhx-select rhx-label="Priority" name="priority" value="Medium"
                    rhx-for="SelectedPriority" />
    </div>

    <!-- ── With hint ── -->
    <div class="demo-label">With Hint</div>
    <div class="demo-row">
        <rhx-select rhx-label="Country" name="country-hint"
                    rhx-placeholder="Select..."
                    rhx-hint="Choose your country of residence"
                    rhx-items="Model.Countries" />
    </div>

    <!-- ── With clear button ── -->
    <div class="demo-label">With Clear Button</div>
    <div class="demo-row">
        <rhx-select rhx-label="Country" name="country-clear" value="US"
                    rhx-with-clear="true"
                    rhx-items="Model.Countries" />
    </div>

    <!-- ── Required ── -->
    <div class="demo-label">Required</div>
    <div class="demo-row">
        <rhx-select rhx-label="Country" name="country-req"
                    rhx-required="true" rhx-placeholder="Select a country"
                    rhx-items="Model.Countries" />
    </div>

    <!-- ── Filled variant ── -->
    <div class="demo-label">Filled Variant</div>
    <div class="demo-row">
        <rhx-select rhx-label="City" name="city-filled" rhx-filled="true"
                    rhx-placeholder="Choose a city"
                    rhx-items="Model.Cities" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start;">
        <rhx-select rhx-label="Small" name="sel-sm" rhx-size="small"
                    rhx-placeholder="Small" rhx-items="Model.Cities" />
        <rhx-select rhx-label="Medium (default)" name="sel-md"
                    rhx-placeholder="Medium" rhx-items="Model.Cities" />
        <rhx-select rhx-label="Large" name="sel-lg" rhx-size="large"
                    rhx-placeholder="Large" rhx-items="Model.Cities" />
    </div>

    <!-- ── Child options ── -->
    <div class="demo-label">Child Options (rhx-option)</div>
    <div class="demo-row">
        <rhx-select rhx-label="Color" name="color" rhx-placeholder="Pick a color">
            <rhx-option value="red">Red</rhx-option>
            <rhx-option value="green">Green</rhx-option>
            <rhx-option value="blue">Blue</rhx-option>
            <rhx-option value="purple" rhx-disabled="true">Purple (disabled)</rhx-option>
        </rhx-select>
    </div>

    <!-- ── Multi-select ── -->
    <div class="demo-label">Multi-select</div>
    <div class="demo-row">
        <rhx-select rhx-label="Tags" name="tags" rhx-multiple="true"
                    rhx-placeholder="Select tags">
            <rhx-option value="bug">Bug</rhx-option>
            <rhx-option value="feature">Feature</rhx-option>
            <rhx-option value="docs">Documentation</rhx-option>
            <rhx-option value="perf">Performance</rhx-option>
        </rhx-select>
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-select rhx-label="Disabled" name="sel-dis" value="US"
                    rhx-disabled="true" rhx-items="Model.Countries" />
    </div>
</div>

<div class="demo-section">
    <h2>Combobox</h2>

    <!-- ── Basic combobox ── -->
    <div class="demo-label">Basic Combobox (Client-side Filter)</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="City" name="city"
                      rhx-placeholder="Search cities..."
                      rhx-items="Model.Cities" />
    </div>

    <!-- ── With pre-selected value ── -->
    <div class="demo-label">Pre-selected Value</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="City" name="city-pre" value="NYC"
                      rhx-items="Model.Cities" />
    </div>

    <!-- ── Enum binding ── -->
    <div class="demo-label">Enum Binding</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="Priority" name="cbo-priority"
                      rhx-placeholder="Search priorities..."
                      rhx-for="SelectedPriority" />
    </div>

    <!-- ── With hint ── -->
    <div class="demo-label">With Hint</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="City" name="city-hint"
                      rhx-placeholder="Type to filter..."
                      rhx-hint="Start typing to narrow results"
                      rhx-items="Model.Cities" />
    </div>

    <!-- ── Filled variant ── -->
    <div class="demo-label">Filled Variant</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="Country" name="cbo-filled" rhx-filled="true"
                      rhx-placeholder="Search countries..."
                      rhx-items="Model.Countries" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start;">
        <rhx-combobox rhx-label="Small" name="cbo-sm" rhx-size="small"
                      rhx-placeholder="Small" rhx-items="Model.Cities" />
        <rhx-combobox rhx-label="Medium (default)" name="cbo-md"
                      rhx-placeholder="Medium" rhx-items="Model.Cities" />
        <rhx-combobox rhx-label="Large" name="cbo-lg" rhx-size="large"
                      rhx-placeholder="Large" rhx-items="Model.Cities" />
    </div>

    <!-- ── Child options ── -->
    <div class="demo-label">Child Options</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="Fruit" name="fruit" rhx-placeholder="Search fruits...">
            <rhx-option value="apple">Apple</rhx-option>
            <rhx-option value="banana">Banana</rhx-option>
            <rhx-option value="cherry">Cherry</rhx-option>
            <rhx-option value="grape">Grape</rhx-option>
            <rhx-option value="mango">Mango</rhx-option>
        </rhx-combobox>
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="Disabled" name="cbo-dis" value="NYC"
                      rhx-disabled="true" rhx-items="Model.Cities" />
    </div>

    <!-- ── Readonly ── -->
    <div class="demo-label">Readonly</div>
    <div class="demo-row">
        <rhx-combobox rhx-label="Readonly" name="cbo-ro" value="NYC"
                      rhx-readonly="true" rhx-items="Model.Cities" />
    </div>
</div>

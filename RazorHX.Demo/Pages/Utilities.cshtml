@page
@model UtilitiesModel
@{
    ViewData["Title"] = "Utilities";
}

<div class="demo-section">
    <h2>Copy Button</h2>

    <!-- ── Copy a static value ── -->
    <div class="demo-label">Copy Static Value</div>
    <div class="demo-row">
        <code style="padding: var(--rhx-space-sm) var(--rhx-space-md); background: var(--rhx-color-neutral-100); border-radius: var(--rhx-radius-md); font-family: var(--rhx-font-family-mono);">
            dotnet add package RazorHX
        </code>
        <rhx-copy-button rhx-value="dotnet add package RazorHX" />
    </div>

    <!-- ── Copy from element ── -->
    <div class="demo-label">Copy from Element</div>
    <div class="demo-row">
        <pre id="install-cmd" style="padding: var(--rhx-space-sm) var(--rhx-space-md); background: var(--rhx-color-neutral-100); border-radius: var(--rhx-radius-md); margin: 0; font-family: var(--rhx-font-family-mono);"><code>npm install razorhx-client</code></pre>
        <rhx-copy-button rhx-from="#install-cmd code" />
    </div>

    <!-- ── Custom labels ── -->
    <div class="demo-label">Custom Labels</div>
    <div class="demo-row">
        <rhx-copy-button rhx-value="https://github.com/example/razorhx"
                         rhx-copy-label="Copy URL"
                         rhx-success-label="URL copied!" />
    </div>

    <!-- ── Custom feedback duration ── -->
    <div class="demo-label">Long Feedback (5s)</div>
    <div class="demo-row">
        <rhx-copy-button rhx-value="Long feedback example"
                         rhx-feedback-duration="5000" />
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-copy-button rhx-value="cannot copy" rhx-disabled="true" />
    </div>
</div>

<div class="demo-section">
    <h2>QR Code</h2>

    <!-- ── Basic QR code ── -->
    <div class="demo-label">Basic QR Code</div>
    <div class="demo-row">
        <rhx-qr-code rhx-value="https://example.com" rhx-label="Example website" />
    </div>

    <!-- ── Large with high EC ── -->
    <div class="demo-label">Large (256px) with High Error Correction</div>
    <div class="demo-row">
        <rhx-qr-code rhx-value="https://github.com/example/razorhx"
                     rhx-size="256"
                     rhx-error-correction="H"
                     rhx-label="GitHub repository" />
    </div>

    <!-- ── Custom colors ── -->
    <div class="demo-label">Custom Colors</div>
    <div class="demo-row">
        <rhx-qr-code rhx-value="https://example.com"
                     rhx-fill="#1e40af"
                     rhx-background="#eff6ff"
                     rhx-size="160"
                     rhx-label="Blue QR code" />
        <rhx-qr-code rhx-value="https://example.com"
                     rhx-fill="#166534"
                     rhx-background="#f0fdf4"
                     rhx-size="160"
                     rhx-label="Green QR code" />
    </div>

    <!-- ── Rounded dots ── -->
    <div class="demo-label">Rounded Dots (radius 0.5)</div>
    <div class="demo-row">
        <rhx-qr-code rhx-value="https://example.com/rounded"
                     rhx-radius="0.5"
                     rhx-size="200"
                     rhx-label="Rounded QR code" />
    </div>

    <!-- ── Small QR codes ── -->
    <div class="demo-label">Small (64px)</div>
    <div class="demo-row">
        <rhx-qr-code rhx-value="Hello"
                     rhx-size="64"
                     rhx-label="Small QR code" />
    </div>

    <!-- ── Error correction levels ── -->
    <div class="demo-label">Error Correction Levels</div>
    <div class="demo-row">
        <div style="text-align: center;">
            <rhx-qr-code rhx-value="EC Level Test"
                         rhx-error-correction="L"
                         rhx-size="120"
                         rhx-label="Low EC" />
            <div class="demo-label">L (Low)</div>
        </div>
        <div style="text-align: center;">
            <rhx-qr-code rhx-value="EC Level Test"
                         rhx-error-correction="M"
                         rhx-size="120"
                         rhx-label="Medium EC" />
            <div class="demo-label">M (Medium)</div>
        </div>
        <div style="text-align: center;">
            <rhx-qr-code rhx-value="EC Level Test"
                         rhx-error-correction="Q"
                         rhx-size="120"
                         rhx-label="Quartile EC" />
            <div class="demo-label">Q (Quartile)</div>
        </div>
        <div style="text-align: center;">
            <rhx-qr-code rhx-value="EC Level Test"
                         rhx-error-correction="H"
                         rhx-size="120"
                         rhx-label="High EC" />
            <div class="demo-label">H (High)</div>
        </div>
    </div>
</div>

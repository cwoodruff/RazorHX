@page
@model FormsModel
@{
    ViewData["Title"] = "Forms";
}

<div class="demo-section">
    <h2>Text Input</h2>

    <!-- ── Basic input ── -->
    <div class="demo-label">Basic Input</div>
    <div class="demo-row">
        <rhx-input rhx-label="Username" name="username" rhx-placeholder="Enter your username" />
    </div>

    <!-- ── With hint ── -->
    <div class="demo-label">With Hint</div>
    <div class="demo-row">
        <rhx-input rhx-label="Email" name="email" rhx-type="email"
                   rhx-placeholder="you@example.com"
                   rhx-hint="We'll never share your email." />
    </div>

    <!-- ── Required ── -->
    <div class="demo-label">Required</div>
    <div class="demo-row">
        <rhx-input rhx-label="Full Name" name="fullname" rhx-required="true"
                   rhx-placeholder="Jane Doe" />
    </div>

    <!-- ── With clear button ── -->
    <div class="demo-label">With Clear Button</div>
    <div class="demo-row">
        <rhx-input rhx-label="Search" name="search" rhx-type="search"
                   rhx-placeholder="Type to search..." rhx-with-clear="true" />
    </div>

    <!-- ── Password with toggle ── -->
    <div class="demo-label">Password with Toggle</div>
    <div class="demo-row">
        <rhx-input rhx-label="Password" name="password" rhx-type="password"
                   rhx-password-toggle="true" rhx-placeholder="Enter password" />
    </div>

    <!-- ── Filled variant ── -->
    <div class="demo-label">Filled Variant</div>
    <div class="demo-row">
        <rhx-input rhx-label="City" name="city" rhx-filled="true"
                   rhx-placeholder="Enter your city" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start;">
        <rhx-input rhx-label="Small" name="sm" rhx-size="small" rhx-placeholder="Small input" />
        <rhx-input rhx-label="Medium (default)" name="md" rhx-placeholder="Medium input" />
        <rhx-input rhx-label="Large" name="lg" rhx-size="large" rhx-placeholder="Large input" />
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-input rhx-label="Disabled" name="disabled" value="Cannot edit"
                   rhx-disabled="true" />
    </div>

    <!-- ── Readonly ── -->
    <div class="demo-label">Readonly</div>
    <div class="demo-row">
        <rhx-input rhx-label="Readonly" name="readonly" value="Read only value"
                   rhx-readonly="true" />
    </div>

    <!-- ── With constraints ── -->
    <div class="demo-label">With Constraints</div>
    <div class="demo-row">
        <rhx-input rhx-label="Code" name="code" rhx-placeholder="AB1234"
                   rhx-pattern="^[A-Z]{2}\d{4}$" rhx-maxlength="6"
                   rhx-hint="Format: 2 letters + 4 digits" />
    </div>
</div>

<div class="demo-section">
    <h2>Number Input</h2>

    <!-- ── Basic number input ── -->
    <div class="demo-label">Basic Number Input</div>
    <div class="demo-row">
        <rhx-number-input rhx-label="Quantity" name="quantity" value="1"
                          rhx-min="0" rhx-max="99" rhx-step="1" />
    </div>

    <!-- ── Decimal step ── -->
    <div class="demo-label">Decimal Step</div>
    <div class="demo-row">
        <rhx-number-input rhx-label="Price" name="price" value="9.99"
                          rhx-min="0" rhx-step="0.01" />
    </div>

    <!-- ── No steppers ── -->
    <div class="demo-label">No Stepper Buttons</div>
    <div class="demo-row">
        <rhx-number-input rhx-label="Amount" name="amount" value="100"
                          rhx-no-steppers="true" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row">
        <rhx-number-input rhx-label="Small" name="num-sm" value="5"
                          rhx-size="small" rhx-min="0" rhx-max="10" />
        <rhx-number-input rhx-label="Medium" name="num-md" value="5"
                          rhx-min="0" rhx-max="10" />
        <rhx-number-input rhx-label="Large" name="num-lg" value="5"
                          rhx-size="large" rhx-min="0" rhx-max="10" />
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-number-input rhx-label="Disabled" name="num-dis" value="3"
                          rhx-disabled="true" />
    </div>
</div>

<div class="demo-section">
    <h2>Textarea</h2>

    <!-- ── Basic textarea ── -->
    <div class="demo-label">Basic Textarea</div>
    <div class="demo-row">
        <rhx-textarea rhx-label="Notes" name="notes"
                      rhx-placeholder="Enter your notes..." />
    </div>

    <!-- ── With hint and maxlength ── -->
    <div class="demo-label">With Hint and Maxlength</div>
    <div class="demo-row">
        <rhx-textarea rhx-label="Bio" name="bio" rhx-rows="5"
                      rhx-placeholder="Tell us about yourself..."
                      rhx-maxlength="500"
                      rhx-hint="Max 500 characters" />
    </div>

    <!-- ── Auto-resize ── -->
    <div class="demo-label">Auto-resize</div>
    <div class="demo-row">
        <rhx-textarea rhx-label="Auto-resize" name="auto"
                      rhx-resize="auto" rhx-rows="2"
                      rhx-placeholder="Type here and watch the textarea grow..." />
    </div>

    <!-- ── No resize ── -->
    <div class="demo-label">No Resize</div>
    <div class="demo-row">
        <rhx-textarea rhx-label="Fixed" name="fixed" rhx-resize="none"
                      rhx-rows="4" rhx-placeholder="Cannot resize" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start;">
        <rhx-textarea rhx-label="Small" name="ta-sm" rhx-size="small"
                      rhx-placeholder="Small textarea" />
        <rhx-textarea rhx-label="Medium (default)" name="ta-md"
                      rhx-placeholder="Medium textarea" />
        <rhx-textarea rhx-label="Large" name="ta-lg" rhx-size="large"
                      rhx-placeholder="Large textarea" />
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-textarea rhx-label="Disabled" name="ta-dis" value="Cannot edit"
                      rhx-disabled="true" />
    </div>

    <!-- ── Readonly ── -->
    <div class="demo-label">Readonly</div>
    <div class="demo-row">
        <rhx-textarea rhx-label="Readonly" name="ta-ro"
                      value="This content is read-only"
                      rhx-readonly="true" />
    </div>
</div>

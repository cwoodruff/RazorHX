@page
@model TogglesModel
@{
    ViewData["Title"] = "Toggles";
}

<div class="demo-section">
    <h2>Checkbox</h2>

    <!-- ── Basic checkbox ── -->
    <div class="demo-label">Basic Checkbox</div>
    <div class="demo-row">
        <rhx-checkbox name="agree" rhx-label="I agree to the terms and conditions" />
    </div>

    <!-- ── Pre-checked ── -->
    <div class="demo-label">Pre-checked</div>
    <div class="demo-row">
        <rhx-checkbox name="newsletter" rhx-label="Subscribe to newsletter" rhx-checked="true" />
    </div>

    <!-- ── With hint ── -->
    <div class="demo-label">With Hint</div>
    <div class="demo-row">
        <rhx-checkbox name="marketing" rhx-label="Receive marketing emails"
                      rhx-hint="We'll only send relevant updates" />
    </div>

    <!-- ── Indeterminate ── -->
    <div class="demo-label">Indeterminate</div>
    <div class="demo-row">
        <rhx-checkbox name="select-all" rhx-label="Select all items" rhx-indeterminate="true" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start;">
        <rhx-checkbox name="cb-sm" rhx-label="Small checkbox" rhx-size="small" />
        <rhx-checkbox name="cb-md" rhx-label="Medium checkbox (default)" />
        <rhx-checkbox name="cb-lg" rhx-label="Large checkbox" rhx-size="large" />
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-checkbox name="cb-dis" rhx-label="Disabled checkbox" rhx-disabled="true" />
        <rhx-checkbox name="cb-dis-checked" rhx-label="Disabled checked" rhx-disabled="true" rhx-checked="true" />
    </div>

    <!-- ── Model binding ── -->
    <div class="demo-label">Model Binding (bool property)</div>
    <div class="demo-row">
        <rhx-checkbox rhx-for="AgreeToTerms" rhx-label="Agree to Terms" />
    </div>
</div>

<div class="demo-section">
    <h2>Switch</h2>

    <!-- ── Basic switch ── -->
    <div class="demo-label">Basic Switch</div>
    <div class="demo-row">
        <rhx-switch name="darkMode" rhx-label="Dark mode" />
    </div>

    <!-- ── Pre-checked ── -->
    <div class="demo-label">Pre-checked</div>
    <div class="demo-row">
        <rhx-switch name="notifications" rhx-label="Enable notifications" rhx-checked="true" />
    </div>

    <!-- ── With hint ── -->
    <div class="demo-label">With Hint</div>
    <div class="demo-row">
        <rhx-switch name="autoSave" rhx-label="Auto-save"
                    rhx-hint="Automatically save changes every 30 seconds" />
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row" style="flex-direction: column; align-items: flex-start;">
        <rhx-switch name="sw-sm" rhx-label="Small switch" rhx-size="small" />
        <rhx-switch name="sw-md" rhx-label="Medium switch (default)" />
        <rhx-switch name="sw-lg" rhx-label="Large switch" rhx-size="large" />
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-switch name="sw-dis" rhx-label="Disabled switch" rhx-disabled="true" />
        <rhx-switch name="sw-dis-on" rhx-label="Disabled on" rhx-disabled="true" rhx-checked="true" />
    </div>

    <!-- ── Model binding ── -->
    <div class="demo-label">Model Binding (bool property)</div>
    <div class="demo-row">
        <rhx-switch rhx-for="DarkMode" rhx-label="Dark Mode" />
    </div>
</div>

<div class="demo-section">
    <h2>Radio Group</h2>

    <!-- ── Basic with items ── -->
    <div class="demo-label">Basic Radio Group (Items Binding)</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Notification Frequency" name="frequency"
                         rhx-items="Model.FrequencyOptions" />
    </div>

    <!-- ── With pre-selected value ── -->
    <div class="demo-label">Pre-selected Value</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Notification Frequency" name="frequency-pre"
                         value="weekly" rhx-items="Model.FrequencyOptions" />
    </div>

    <!-- ── Enum binding ── -->
    <div class="demo-label">Enum Binding</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Priority" name="priority"
                         rhx-for="SelectedPriority" />
    </div>

    <!-- ── Inline layout ── -->
    <div class="demo-label">Inline Layout</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Size" name="size" rhx-inline="true" value="md">
            <rhx-radio value="sm">Small</rhx-radio>
            <rhx-radio value="md">Medium</rhx-radio>
            <rhx-radio value="lg">Large</rhx-radio>
            <rhx-radio value="xl">Extra Large</rhx-radio>
        </rhx-radio-group>
    </div>

    <!-- ── With hint ── -->
    <div class="demo-label">With Hint</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Plan" name="plan"
                         rhx-hint="You can change your plan at any time"
                         rhx-items="Model.PlanOptions" />
    </div>

    <!-- ── Child radio elements ── -->
    <div class="demo-label">Child Options (rhx-radio)</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Color" name="color">
            <rhx-radio value="red">Red</rhx-radio>
            <rhx-radio value="green">Green</rhx-radio>
            <rhx-radio value="blue">Blue</rhx-radio>
            <rhx-radio value="purple" rhx-disabled="true">Purple (disabled)</rhx-radio>
        </rhx-radio-group>
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Disabled Group" name="dis-group"
                         rhx-disabled="true" value="weekly"
                         rhx-items="Model.FrequencyOptions" />
    </div>

    <!-- ── Small size ── -->
    <div class="demo-label">Small Size</div>
    <div class="demo-row">
        <rhx-radio-group rhx-label="Priority" name="priority-sm" rhx-size="small"
                         rhx-for="SelectedPriority" />
    </div>
</div>

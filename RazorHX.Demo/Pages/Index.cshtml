@page
@model IndexModel
@{
    ViewData["Title"] = "Components";
}

<div class="demo-section">
    <h2>Buttons</h2>

    <!-- ── Variants × Filled ── -->
    <div class="demo-label">Variants (Filled)</div>
    <div class="demo-row">
        <rhx-button rhx-variant="neutral">Neutral</rhx-button>
        <rhx-button rhx-variant="brand">Brand</rhx-button>
        <rhx-button rhx-variant="success">Success</rhx-button>
        <rhx-button rhx-variant="warning">Warning</rhx-button>
        <rhx-button rhx-variant="danger">Danger</rhx-button>
    </div>

    <!-- ── Variants × Outlined ── -->
    <div class="demo-label">Variants (Outlined)</div>
    <div class="demo-row">
        <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Neutral</rhx-button>
        <rhx-button rhx-variant="brand" rhx-appearance="outlined">Brand</rhx-button>
        <rhx-button rhx-variant="success" rhx-appearance="outlined">Success</rhx-button>
        <rhx-button rhx-variant="warning" rhx-appearance="outlined">Warning</rhx-button>
        <rhx-button rhx-variant="danger" rhx-appearance="outlined">Danger</rhx-button>
    </div>

    <!-- ── Variants × Plain ── -->
    <div class="demo-label">Variants (Plain)</div>
    <div class="demo-row">
        <rhx-button rhx-variant="neutral" rhx-appearance="plain">Neutral</rhx-button>
        <rhx-button rhx-variant="brand" rhx-appearance="plain">Brand</rhx-button>
        <rhx-button rhx-variant="success" rhx-appearance="plain">Success</rhx-button>
        <rhx-button rhx-variant="warning" rhx-appearance="plain">Warning</rhx-button>
        <rhx-button rhx-variant="danger" rhx-appearance="plain">Danger</rhx-button>
    </div>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row">
        <rhx-button rhx-variant="brand" rhx-size="small">Small</rhx-button>
        <rhx-button rhx-variant="brand">Medium (default)</rhx-button>
        <rhx-button rhx-variant="brand" rhx-size="large">Large</rhx-button>
    </div>

    <!-- ── Shapes ── -->
    <div class="demo-label">Shapes</div>
    <div class="demo-row">
        <rhx-button rhx-variant="brand">Default</rhx-button>
        <rhx-button rhx-variant="brand" rhx-pill="true">Pill</rhx-button>
        <rhx-button rhx-variant="brand" rhx-circle="true" aria-label="Add">+</rhx-button>
    </div>

    <!-- ── States ── -->
    <div class="demo-label">States</div>
    <div class="demo-row">
        <rhx-button rhx-variant="brand" rhx-disabled="true">Disabled</rhx-button>
        <rhx-button rhx-variant="brand" rhx-loading="true">Loading</rhx-button>
    </div>

    <!-- ── Link Buttons ── -->
    <div class="demo-label">Link Buttons</div>
    <div class="demo-row">
        <rhx-button rhx-variant="brand" rhx-href="/about">Navigate</rhx-button>
        <rhx-button rhx-variant="brand" rhx-appearance="outlined" rhx-href="/docs" rhx-target="_blank">
            External Link
        </rhx-button>
        <rhx-button rhx-variant="neutral" rhx-appearance="plain" rhx-href="/download" rhx-download="file.pdf">
            Download
        </rhx-button>
    </div>

    <!-- ── Form Buttons ── -->
    <div class="demo-label">Form Buttons</div>
    <div class="demo-row">
        <rhx-button rhx-variant="brand" type="submit">Submit</rhx-button>
        <rhx-button rhx-variant="neutral" type="reset">Reset</rhx-button>
        <rhx-button rhx-variant="neutral" name="action" value="save">Named Button</rhx-button>
    </div>

    <!-- ── Button Group ── -->
    <div class="demo-label">Button Group</div>
    <div class="demo-row">
        <rhx-button-group label="Actions">
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Edit</rhx-button>
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Copy</rhx-button>
            <rhx-button rhx-variant="danger" rhx-appearance="outlined">Delete</rhx-button>
        </rhx-button-group>
    </div>

    <div class="demo-row">
        <rhx-button-group label="Sizes">
            <rhx-button rhx-variant="brand" rhx-size="small">Small A</rhx-button>
            <rhx-button rhx-variant="brand" rhx-size="small">Small B</rhx-button>
            <rhx-button rhx-variant="brand" rhx-size="small">Small C</rhx-button>
        </rhx-button-group>
    </div>

    <!-- ── htmx Integration ── -->
    <div class="demo-label">htmx Integration</div>
    <div class="demo-row">
        <rhx-button rhx-variant="brand" hx-get="/api/greeting" hx-target="#result" hx-swap="innerHTML">
            Load Greeting
        </rhx-button>
        <rhx-button rhx-variant="danger" rhx-appearance="outlined"
                    hx-delete="/api/items/42" hx-confirm="Are you sure?"
                    hx-target="#result" hx-swap="innerHTML">
            Delete Item
        </rhx-button>
        <span id="result" class="rhx-text-muted">Click a button...</span>
    </div>
</div>

    <link rel="stylesheet" href="/_rhx/css/components/rhx-popover.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-sparkline.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-validation.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-patterns.css" />
    <link rel="stylesheet" href="/css/docs.css" />
</head>
<body class="docs-layout @(showSidebar ? "" : "docs-layout--no-sidebar")">

    <header class="docs-topbar rhx-surface">
        <div class="docs-topbar__start">
            <button class="docs-topbar__menu-btn" onclick="document.getElementById('mobile-nav').showModal ? document.getElementById('mobile-nav').showModal() : null" aria-label="Open navigation">&#9776;</button>
            <a href="/" class="docs-topbar__logo">RazorHX</a>
        </div>
        <div class="docs-topbar__end">
            <a href="https://github.com/pamamalas/RazorHX" class="rhx-button rhx-button--neutral rhx-button--outlined rhx-button--small" target="_blank" rel="noopener noreferrer">
                <span class="rhx-button__label">GitHub</span>
            </a>
            <button onclick="RHX.toggleTheme()" class="rhx-button rhx-button--neutral rhx-button--outlined rhx-button--small">
                <span class="rhx-button__label">Toggle Theme</span>
            </button>
        </div>
    </header>

    @if (showSidebar)
    {
        <aside class="docs-sidebar">
            @await Html.PartialAsync("_SidebarNav")
        </aside>
    }

    <main class="docs-main">
        @if (ViewData["Breadcrumbs"] is IList<BreadcrumbItem> crumbs)
        {
            <rhx-breadcrumb rhx-items="@crumbs" />
        }
        @RenderBody()
    </main>

    <rhx-drawer id="mobile-nav" rhx-label="Navigation" rhx-placement="start">
        @await Html.PartialAsync("_SidebarNav")
    </rhx-drawer>

    <script src="/_rhx/js/components/rhx-dropdown.js" defer></script>
    <script src="/_rhx/js/components/rhx-copy-button.js" defer></script>
    <script src="/_rhx/js/components/rhx-qr-code.js" defer></script>
    <script src="/_rhx/js/components/rhx-input.js" defer></script>
    <script src="/_rhx/js/components/rhx-select.js" defer></script>
    <script src="/_rhx/js/components/rhx-combobox.js" defer></script>
    <script src="/_rhx/js/components/rhx-callout.js" defer></script>
    <script src="/_rhx/js/components/rhx-tooltip.js" defer></script>
    <script src="/_rhx/js/components/rhx-tabs.js" defer></script>
    <script src="/_rhx/js/components/rhx-tree.js" defer></script>
    <script src="/_rhx/js/components/rhx-split-panel.js" defer></script>
    <script src="/_rhx/js/components/rhx-dialog.js" defer></script>
    <script src="/_rhx/js/components/rhx-drawer.js" defer></script>
    <script src="/_rhx/js/components/rhx-scroller.js" defer></script>
    <script src="/_rhx/js/components/rhx-animated-image.js" defer></script>
    <script src="/_rhx/js/components/rhx-comparison.js" defer></script>
    <script src="/_rhx/js/components/rhx-zoomable-frame.js" defer></script>
    <script src="/_rhx/js/components/rhx-carousel.js" defer></script>
    <script src="/_rhx/js/components/rhx-relative-time.js" defer></script>
    <script src="/_rhx/js/rhx-position.js" defer></script>
    <script src="/_rhx/js/components/rhx-animation.js" defer></script>
    <script src="/_rhx/js/components/rhx-popup.js" defer></script>
    <script src="/_rhx/js/components/rhx-popover.js" defer></script>
    <script src="/_rhx/js/components/rhx-slider.js" defer></script>
    <script src="/_rhx/js/components/rhx-rating.js" defer></script>
    <script src="/_rhx/js/components/rhx-color-picker.js" defer></script>
    <script src="/_rhx/js/components/rhx-file-input.js" defer></script>
    <script src="/_rhx/js/components/rhx-validation.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

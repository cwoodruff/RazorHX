@page
@model IndicatorsModel
@{
    ViewData["Title"] = "Indicators & Tooltips";
}

<div class="demo-section">
    <h2>Progress Bar</h2>

    <!-- ── Determinate values ── -->
    <div class="demo-label">Determinate Values</div>
    <div class="demo-row" style="flex-direction: column; align-items: stretch; gap: var(--rhx-space-md);">
        <rhx-progress-bar rhx-value="0" rhx-label="Not started" />
        <rhx-progress-bar rhx-value="25" rhx-label="Quarter complete" />
        <rhx-progress-bar rhx-value="65" rhx-label="Upload progress" />
        <rhx-progress-bar rhx-value="100" rhx-label="Complete" />
    </div>

    <!-- ── Indeterminate ── -->
    <div class="demo-label">Indeterminate</div>
    <div class="demo-row" style="flex-direction: column; align-items: stretch;">
        <rhx-progress-bar rhx-indeterminate="true" rhx-label="Loading" />
    </div>
</div>

<div class="demo-section">
    <h2>Progress Ring</h2>

    <!-- ── Various values ── -->
    <div class="demo-label">Various Values</div>
    <div class="demo-row">
        <rhx-progress-ring rhx-value="0" rhx-label="Not started" />
        <rhx-progress-ring rhx-value="25" rhx-label="Quarter" />
        <rhx-progress-ring rhx-value="65" rhx-label="Upload" />
        <rhx-progress-ring rhx-value="100" rhx-label="Complete" />
    </div>

    <!-- ── Custom stroke widths ── -->
    <div class="demo-label">Custom Stroke Widths</div>
    <div class="demo-row">
        <rhx-progress-ring rhx-value="75" rhx-track-width="2" rhx-indicator-width="2" />
        <rhx-progress-ring rhx-value="75" rhx-track-width="4" rhx-indicator-width="4" />
        <rhx-progress-ring rhx-value="75" rhx-track-width="3" rhx-indicator-width="5" />
    </div>
</div>

<div class="demo-section">
    <h2>Spinner</h2>

    <!-- ── Sizes ── -->
    <div class="demo-label">Sizes</div>
    <div class="demo-row">
        <rhx-spinner rhx-size="small" />
        <rhx-spinner />
        <rhx-spinner rhx-size="large" />
        <rhx-spinner rhx-size="3rem" rhx-label="Custom size" />
    </div>

    <!-- ── htmx indicator pattern ── -->
    <div class="demo-label">htmx Indicator Pattern</div>
    <div class="demo-row">
        <rhx-spinner id="my-indicator" class="htmx-indicator" />
        <span style="font-size: var(--rhx-font-size-sm); color: var(--rhx-color-text-muted);">
            (Spinner with class="htmx-indicator" for use with hx-indicator)
        </span>
    </div>
</div>

<div class="demo-section">
    <h2>Skeleton</h2>

    <!-- ── Effects ── -->
    <div class="demo-label">Effects</div>
    <div class="demo-row" style="flex-direction: column; align-items: stretch; gap: var(--rhx-space-md);">
        <rhx-skeleton rhx-effect="none" rhx-width="200px" rhx-height="24px" />
        <rhx-skeleton rhx-effect="pulse" rhx-width="200px" rhx-height="24px" />
        <rhx-skeleton rhx-effect="sheen" rhx-width="200px" rhx-height="24px" />
    </div>

    <!-- ── Shapes ── -->
    <div class="demo-label">Shapes</div>
    <div class="demo-row">
        <rhx-skeleton rhx-shape="rectangle" rhx-width="120px" rhx-height="24px" />
        <rhx-skeleton rhx-shape="rounded" rhx-width="120px" rhx-height="24px" />
        <rhx-skeleton rhx-shape="circle" rhx-width="48px" rhx-height="48px" />
    </div>

    <!-- ── Content placeholder pattern ── -->
    <div class="demo-label">Content Placeholder Pattern</div>
    <div class="demo-row" style="flex-direction: column; align-items: stretch; gap: var(--rhx-space-sm);">
        <div style="display: flex; gap: var(--rhx-space-md); align-items: center;">
            <rhx-skeleton rhx-shape="circle" rhx-width="48px" rhx-height="48px" />
            <div style="flex: 1; display: flex; flex-direction: column; gap: var(--rhx-space-xs);">
                <rhx-skeleton rhx-width="60%" rhx-height="16px" />
                <rhx-skeleton rhx-width="40%" rhx-height="12px" />
            </div>
        </div>
        <rhx-skeleton rhx-width="100%" rhx-height="80px" />
        <rhx-skeleton rhx-width="75%" rhx-height="16px" />
    </div>
</div>

<div class="demo-section">
    <h2>Tooltip</h2>

    <!-- ── Basic tooltips ── -->
    <div class="demo-label">Basic Tooltips (hover)</div>
    <div class="demo-row">
        <rhx-tooltip rhx-content="Save your changes">
            <rhx-button rhx-variant="brand">Save</rhx-button>
        </rhx-tooltip>
        <rhx-tooltip rhx-content="Delete this item permanently" rhx-placement="bottom">
            <rhx-button rhx-variant="danger">Delete</rhx-button>
        </rhx-tooltip>
        <rhx-tooltip rhx-content="Edit settings" rhx-placement="right">
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Settings</rhx-button>
        </rhx-tooltip>
    </div>

    <!-- ── Placements ── -->
    <div class="demo-label">Placements</div>
    <div class="demo-row" style="padding: var(--rhx-space-2xl);">
        <rhx-tooltip rhx-content="Top tooltip" rhx-placement="top">
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Top</rhx-button>
        </rhx-tooltip>
        <rhx-tooltip rhx-content="Bottom tooltip" rhx-placement="bottom">
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Bottom</rhx-button>
        </rhx-tooltip>
        <rhx-tooltip rhx-content="Left tooltip" rhx-placement="left">
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Left</rhx-button>
        </rhx-tooltip>
        <rhx-tooltip rhx-content="Right tooltip" rhx-placement="right">
            <rhx-button rhx-variant="neutral" rhx-appearance="outlined">Right</rhx-button>
        </rhx-tooltip>
    </div>

    <!-- ── Click trigger ── -->
    <div class="demo-label">Click Trigger</div>
    <div class="demo-row">
        <rhx-tooltip rhx-content="Click to toggle this tooltip" rhx-trigger="click">
            <rhx-button rhx-variant="brand" rhx-appearance="outlined">Click Me</rhx-button>
        </rhx-tooltip>
    </div>

    <!-- ── Disabled ── -->
    <div class="demo-label">Disabled Tooltip</div>
    <div class="demo-row">
        <rhx-tooltip rhx-content="This tooltip is disabled" rhx-disabled="true">
            <rhx-button rhx-variant="neutral">Hover (no tooltip)</rhx-button>
        </rhx-tooltip>
    </div>
</div>

@section Scripts {
    <script src="/_rhx/js/components/rhx-tooltip.js" defer></script>
}

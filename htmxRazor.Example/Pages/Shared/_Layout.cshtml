<!DOCTYPE html>
<html lang="en" data-rhx-theme="light">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - htmxRazor To-Do</title>
    <link rel="stylesheet" href="/_rhx/css/components/rhx-button.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-input.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-checkbox.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-select.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-card.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-badge.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-callout.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-dialog.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-tabs.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-icon.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-tooltip.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-spinner.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-divider.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-progress-bar.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-tag.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-switch.css" />
    <link rel="stylesheet" href="/_rhx/css/components/rhx-details.css" />
    <link rel="stylesheet" href="~/css/app.css" />
</head>
<body>
    <header class="app-header">
        <div class="app-header__inner">
            <div class="app-header__brand">
                <rhx-icon name="check" rhx-size="large" aria-hidden="true"></rhx-icon>
                <h1 class="app-header__title">htmxRazor To-Do</h1>
            </div>
            <div class="app-header__actions">
                <rhx-tooltip rhx-content="Toggle dark mode" rhx-placement="bottom">
                    <rhx-button rhx-appearance="plain" rhx-size="small"
                                onclick="RHX.toggleTheme()" aria-label="Toggle theme">
                        <rhx-icon name="palette" rhx-size="small"></rhx-icon>
                    </rhx-button>
                </rhx-tooltip>
            </div>
        </div>
    </header>

    <main class="app-main">
        @RenderBody()
    </main>

    <footer class="app-footer">
        <span>Built with</span>
        <rhx-badge rhx-variant="brand" rhx-pill="true">htmxRazor</rhx-badge>
        <span>+ htmx</span>
    </footer>

    @Html.AntiForgeryToken()
    <script>
        document.addEventListener('htmx:configRequest', function(e) {
            var token = document.querySelector('input[name="__RequestVerificationToken"]');
            if (token) e.detail.headers['RequestVerificationToken'] = token.value;
        });
    </script>
    <script src="/_rhx/js/components/rhx-input.js" defer></script>
    <script src="/_rhx/js/components/rhx-select.js" defer></script>
    <script src="/_rhx/js/components/rhx-callout.js" defer></script>
    <script src="/_rhx/js/components/rhx-tooltip.js" defer></script>
    <script src="/_rhx/js/components/rhx-tabs.js" defer></script>
    <script src="/_rhx/js/components/rhx-dialog.js" defer></script>
    <script src="/_rhx/js/components/rhx-validation.js" defer></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

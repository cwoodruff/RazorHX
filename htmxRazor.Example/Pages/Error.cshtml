@page
@model ErrorModel
@{
    ViewData["Title"] = "Error";
}

<rhx-callout rhx-variant="danger">
    <strong>An error occurred while processing your request.</strong>
    @if (Model.ShowRequestId)
    {
        <p style="margin-top: var(--rhx-space-sm);">
            <strong>Request ID:</strong> <code>@Model.RequestId</code>
        </p>
    }
</rhx-callout>

<div style="margin-top: var(--rhx-space-xl);">
    <rhx-button rhx-variant="brand" rhx-href="/">
        <rhx-icon name="refresh" rhx-size="small"></rhx-icon>
        Back to Tasks
    </rhx-button>
</div>
